<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<%= render 'shared/errors', obj: @project %>
<%# only a manager can create projects %>
<% if current_user.manager? %>
  <h1>Create a new project</h1>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@project, :html => {class: "form-horizontal",role: "form"}) do |f| %>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control",placeholder: "Name of project",autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control",placeholder: "Enter steps to create project" %>
        </div>
      </div>
      <%# manager can link project with qa's and developers %>
      <hr/>
        <div class="form-group">
          <div class="row">
            <div class="col-md-offset-2 col-md-8">
              <%#if @project.user.manager?%>
                <%#= select_tag "project_user", options_for_select(options) %> 
                
                <%= f.collection_check_boxes :user_id, User.qa, :id, :name do |cb| %>
                  <%#if @user.role=="manager" %>
                    <%# else %>
                  <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                  <%#end%>
                <% end %> |
                <%= f.collection_check_boxes :user_id, User.developer, :id, :name do |cb| %>
                  <%#if @user.role=="manager" %>
                    <%# else %>
                  <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                  <%#end%>
                <% end %>

              <%# end %>
            </div>
          </div>
        </div>
      <hr/>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>

    <% end %>

    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request and return to projects listing",projects_path %> ]
    </div>

  </div>
</div>
<% else %>
  <h1>Only managers can create projects</h1>
<% end %>
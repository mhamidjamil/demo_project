<%= render 'shared/page_title', title: "Bugs" %>

<div align="center">
  <% @bugs.each do |bug| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to bug.title.capitalize,bug_path(bug) %></li>
            <li>
                <small>
                    <%= pluralize(bug.projects.count, "project") if bug.projects %>
                </small>
            </li>
        </div>
      </div>
    </ul>
    <hr />
  <% end %>
</div>
<%= render 'shared/page_title', title: "showing all Users" %>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
            <li class="user-title">
            <span class="quite">
            <%=user.role%> |
            </span>
                <%= link_to user.name.capitalize, user_path(user) %>
                <%if user==current_user%>
                    <%#= link_to "Edit", edit_user_path(user) %>
                  <small>
                      (Logged in)
                  </small>
                <%end%>

            </li>
          
            <li>
                <small>
                    <%= pluralize(user.projects.count, "project") if user.projects %>
                </small>
            </li>
        </div>
      </div>
    </ul>      
    </br>
    <hr />
  <% end %>
</div>
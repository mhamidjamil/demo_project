<%= render 'shared/page_title', title: "showing all Users" %>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
            <li class="user-title">
                <%= link_to user.name.capitalize, user_path(user) %>
            </li>
          
            <li>
                <small>
                    <%= pluralize(user.projects.count, "project") if user.projects %>
                </small>
            </li>
        </div>
      </div>
    </ul>      
    </br>
  <% end %>
</div>